{
  "name": "promptman-test",
  "version": "1.0.0",
  "description": "Local test runner for multi-turn, tool-calling LLM prompts",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "examples",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "promptman-test": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "prepublishOnly": "npm run build && chmod +x dist/index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "llm",
    "testing",
    "prompt",
    "tool-calling",
    "multi-turn",
    "openai",
    "agent",
    "promptman"
  ],
  "author": "Marcelo Emmerioch <marcelo@promptman.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MarceloEmmerich/promptman-test"
  },
  "homepage": "https://promptman.dev",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
